{% assign posts = posts | getPopularPosts: analytics %}
<div class="popular-posts">
  <h2 class="flex--centered">
    {% tablericon "flame" "Popular" %}
    Popular posts
  </h2>
  <ul>
    {% for post in posts limit: 5 %}
      <li>
        <a href="{{post.url}}" title="{{ post.data.title | escape}}">
          {{ post.data.title }}
        </a>
      </li>
    {% endfor %}
  </ul>
</div>