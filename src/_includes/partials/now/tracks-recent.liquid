{% if data.size > 0 %}
<div class="music-chart">
  {% for item in data limit: 10 %}
  {% capture alt %}{{ item.title | escape }} by {{ item.artist }}{% endcapture %}
    <div class="item">
      <div class="meta">
        <img src="https://coryd.dev/.netlify/images/?url={{ item.image }}&fit=cover&w=64&h=64&fm=webp&q=65" alt="{{ alt }}" loading="lazy" decoding="async" width="64" height="64" />
        <div class="meta-text">
          <div class="title">{{ item.title }}</div>
          <div class="subtext">
            <a href="{{ item.url }}">{{ item.artist }}</a>
          </div>
        </div>
      </div>
      <div class="timestamp">
        {{ item.timestamp | date: "%B %-d, %-I:%M%p", "America/Los_Angeles" }}
      </div>
    </div>
  {% endfor %}
</div>
{% endif %}