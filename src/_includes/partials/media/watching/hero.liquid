{% capture alt %}{{ movie.title | escape }} ({{ movie.year }}){% endcapture %}
<a href="{{ movie.url }}">
  <div class="watching hero shadow">
    <div class="meta-text">
      <div class="header">{{ movie.title }} ({{ movie.year }})</div>
      <div class="subheader">Last watched @ {{ movie.dateAdded | date: "%B %e, %Y" }}</div>
    </div>
    <img
      src="{{ movie.backdrop }}"
      alt="{{ alt }}"
      loading="eager"
      decoding="async"
      width="768"
      height="432"
    />
  </div>
</a>